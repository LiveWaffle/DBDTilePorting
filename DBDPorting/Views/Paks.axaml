<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="400"
        Height="200"
        x:Class="DBDPorting.Views.Paks"
        Background="#343541"
        CanResize="False"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        Title="Paks">
        
        
       <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
               <TextBlock> "Please set your pak directory here if not already set:"</TextBlock>
               <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Click="SetDir" HorizontalAlignment="Center">
                        <Image Source="../Resources/alert.png" Width="25" Height="25"/>
                </Button>
                <TextBox x:Name="SetDirBox" Height="25" Width="250" />
        </StackPanel>
        </StackPanel>
</Window>
